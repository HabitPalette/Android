<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_create_habit_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/white_blue"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/button_back_to_home"
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_icon_arrow_left" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_new_habit"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_create_habit_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_create_habit_title">

        <LinearLayout
            android:id="@+id/layout_input_habit_name"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="@string/create_new_habit_name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="40dp">

                <EditText
                    android:id="@+id/edit_text_habit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:hint="@string/create_new_habit_name_hint"
                    android:maxLength="40"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#cccccc"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="12dp"
                    android:layout_gravity="end"
                    android:text="@string/create_new_habit_name_maxLength"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_input_habit_start_date"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="@string/create_new_habit_start_date"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="40dp">

                <EditText
                    android:id="@+id/edit_text_habit_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:hint="@string/create_new_habit_start_date_hint"
                    android:inputType="date"
                    android:textColor="@color/black"
                    android:textColorHint="#cccccc"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_input_habit_period"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="@string/create_new_habit_period"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="40dp">


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_input_habit_color"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="@string/create_new_habit_color"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="40dp">

                <RadioGroup
                    android:id="@+id/radio_group_habit_color_row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/button_habit_color_pink"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@android:color/transparent"
                        android:button="@drawable/circle_color_button_pink" />

                    <RadioButton
                        android:id="@+id/button_habit_color_red"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@android:color/transparent"
                        android:button="@drawable/circle_color_button_red" />

                    <RadioButton
                        android:id="@+id/button_habit_color_orange"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@android:color/transparent"
                        android:button="@drawable/circle_color_button_orange" />

                    <RadioButton
                        android:id="@+id/button_habit_color_yellow"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@android:color/transparent"
                        android:button="@drawable/circle_color_button_yellow" />

                    <RadioButton
                        android:id="@+id/button_habit_color_green"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="@android:color/transparent"
                        android:button="@drawable/circle_color_button_green" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radio_group_habit_color_row2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/button_habit_color_light_green_blue"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:button="@drawable/circle_color_button_light_green_blue" />

                    <RadioButton
                        android:id="@+id/button_habit_color_blue"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:button="@drawable/circle_color_button_blue" />

                    <RadioButton
                        android:id="@+id/button_habit_color_light_blue_purple"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:button="@drawable/circle_color_button_light_blue_purple" />

                    <RadioButton
                        android:id="@+id/button_habit_color_purple"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:button="@drawable/circle_color_button_purple" />

                    <RadioButton
                        android:id="@+id/button_habit_color_gray"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/transparent"
                        android:button="@drawable/circle_color_button_gray" />

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>