<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutCurrentItem"
    android:layout_width="200dp"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:background="@drawable/shadow_habit_box_short">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/light_gray"
            android:textSize="14sp"
            android:textStyle="normal" />

        <com.example.habitpalette.ui.common.HabitScoreProgressView
            android:id="@+id/pvCurrentProgress"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            app:bgColor="@color/white"
            app:fgColorStart="@color/purple_200"
            app:strokeWidth="13dp"
            android:layout_marginBottom="20dp"/>
</LinearLayout>