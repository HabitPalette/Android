<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">

        <layer-list>

            <item>
                <shape android:shape="oval">
                    <stroke android:width="2dp" android:color="@color/checked_gray" />
                    <solid android:color="@color/white" />
                    <size android:width="@dimen/color_habit_normal_circle" android:height="@dimen/color_habit_normal_circle" />
                </shape>
            </item>
            <item>
                <shape android:shape="oval">
                    <stroke android:color="@android:color/transparent"
                        android:width="10dp"/>
                    <solid android:color="@color/red" />
                    <size android:width="@dimen/color_habit_checked_inner_circle" android:height="@dimen/color_habit_checked_inner_circle" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">

        <shape android:shape="oval">
            <stroke android:width="4dp" android:color="@android:color/transparent" />
            <solid android:color="@color/red" />
            <size android:width="@dimen/color_habit_normal_circle" android:height="@dimen/color_habit_normal_circle" />
        </shape>
    </item>

</selector>